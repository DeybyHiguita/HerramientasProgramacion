@using HerramientasDeProgramacionII.Models.Empleado
@model EmpleadoModel

@{
    Layout = "_Layout";
}
<link href="~/css/Empleado.css" rel="stylesheet" />

<section class="HerenciaPOO">
    <section class="section">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Editar Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" name="idempleado" value="@Model.idempleado" />

                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" class="form-control" id="apellido" name="Apellido" value="@Model.apellido" required>
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="Nombre" value="@Model.nombre" required>
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccion" name="Direccion" value="@Model.direccion" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="Email" value="@Model.email" required>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">Guardar Cambios</button>
                            <a href="@Url.Action("Index", "Empleado")" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
