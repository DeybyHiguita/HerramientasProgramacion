@using HerramientasDeProgramacionII.Models.Empleado
@model EmpleadoModel

@{
    Layout = "_Layout";
}
<link href="~/css/HerenciaPOO.css" rel="stylesheet" />
<link href="~/css/Empleado.css" rel="stylesheet" />

<section class="HerenciaPOO">
    <section class="section">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Crear Nuevo Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Crear" method="post">
                            <div class="mb-3">
                            <label for="idempleado" class="form-label">Id empleado</label>
                                <input type="text" class="form-control" id="idempleado" name="idempleado" value="@Model.idempleado">
                                @Html.ValidationMessageFor(model => model.idempleado, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="apellido" class="form-label">Apellido</label>
                                <input type="text" class="form-control" id="apellido" name="apellido" value="@Model.apellido">
                                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.nombre">
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="direccion" class="form-label">Dirección</label>
                                <input type="text" class="form-control" id="direccion" name="direccion" value="@Model.direccion">
                                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="@Model.email">
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-success me-2">Guardar</button>
                                <a href="@Url.Action("Index", "Empleado")" class="btn btn-secondary">Cancelar</a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
