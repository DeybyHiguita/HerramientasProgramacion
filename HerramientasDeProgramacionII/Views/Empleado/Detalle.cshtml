@using HerramientasDeProgramacionII.Models.Empleado
@model EmpleadoModel

@{
    Layout = "_Layout";
}
<link href="~/css/Empleado.css" rel="stylesheet" />

<section class="HerenciaPOO">
    <section class="section">
        <div class="container mt-5">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Detalles del Empleado</h4>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>@Model.idempleado</td>
                            </tr>
                            <tr>
                                <th>Apellido</th>
                                <td>@Model.apellido</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>@Model.nombre</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>@Model.direccion</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.email</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("Index", "Empleado")" class="btn btn-secondary">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
