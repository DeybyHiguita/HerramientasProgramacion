@using HerramientasDeProgramacionII.Models.Libreria
@model UsuarioModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="width: 400px;">

            <div class="card-header text-center bg-success text-white">
                <h4>Crear Cuenta</h4>
            </div>
            <div class="card-body">
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                    }

                    <form asp-action="Registro" method="post">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Crea un usuario" required>
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Crea una contraseña" required>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-success w-100">Registrar</button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <p>¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Libreria")" class="text-success">Inicia Sesión</a></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
